<Window x:Class="Trails_To_Azure_Launcher.ExitConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trails_To_Azure_Launcher"
        mc:Ignorable="d"
        Title="Confirm Exit" Height="160" Width="320" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Label Content="Are you sure you want to exit while a &#xA;              process is running?" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Button x:Name="elev_yes_btn" Content="Yes" HorizontalAlignment="Center" Margin="0,80,160,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3" FontSize="18" Padding="30,4,30,4" Background="#FFE4E4E4" Click="KillApp" Visibility="Visible"/>
        <Button x:Name="elev_no_btn" Content="No" HorizontalAlignment="Center" Margin="0,80,-160,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3" FontSize="18" Padding="30,4,30,4" Background="#FFE4E4E4" Click="CloseWindow" Visibility="Visible"/>
    </Grid>
</Window>
